{
    "identity": "assist_trainer",
    "model_info": {
        "name": "horizontal_linear_regression",
        "config": {
            "input_dim": 5,
            "bias": true
        }
    },
    "input": {
        "valset": [
            {
                "type": "csv",
                "path": "/tmp/xfl/dataset/unit_test",
                "name": "test_data.csv",
                "has_label": true,
                "has_id": true
            }
        ],
        "pretrain_model": {}
    },
    "output": {
        "path": "/tmp/xfl/checkpoints/unit_test",
        "model": {
            "name": "horizontal_linear_regression_[STAGE_ID].model"
        },
        "metric_val": {
            "name": "lr_metric_val_[STAGE_ID].csv"
        }
    },
    "train_info": {
        "device": "cpu",
        "interaction_params": {
            "save_frequency": -1,
            "write_validation_prediction": true
        },
        "train_params": {
            "global_epoch": 30,
            "val_batch_size": 64,
            "aggregation": {
                "method": {
                    "fedavg": {}
                }
            },
            "encryption": {
                "otp": {
                    "key_bitlength": 64,
                    "data_type": "torch.Tensor",
                    "key_exchange": {
                        "key_bitlength": 3072,
                        "optimized": true
                    },
                    "csprng": {
                        "name": "hmac_drbg",
                        "method": "sha512"
                    }
                }
            },
            "optimizer": {
                "Adam": {
                    "lr":0.01,
                    "amsgrad": true
                }
            },
            "lr_scheduler": {
                "StepLR": {
                    "step_size": 10,
                    "gamma": 0.1
                }
            },
            "lossfunc": {
                "L1Loss": {}
            },
            "metric": {
                "mae": {},
                "mse": {},
                "mape": {}
            },
            "early_stopping": {}
        }
    }
}