{
    "identity": "assist_trainer",
    "model_info": {
        "name": "horizontal_vgg_jax",
        "config": {
            "num_classes": 10,
            "layers": 11
        }
    },
    "input": {
        "valset": [
            {
                "type": "npz",
                "path": "./dataset/cifar10/2party",
                "name": "cifar10_test.npz"
            }
        ],
        "pretrain_model": {
        }
    },
    "output": {
        "model": {
            "type": "file",
            "path": "/opt/checkpoints/[JOB_ID]/[NODE_ID]",
            "name": "horizontal_vgg_jax.pt"
        },
        "metrics": {
            "type": "csv",
            "path": "/opt/checkpoints/[JOB_ID]/[NODE_ID]",
            "header": true
        },
        "evaluation": {
            "type": "csv",
            "path": "/opt/checkpoints/[JOB_ID]/[NODE_ID]",
            "header": true
        }
    },
    "train_info": {
        "device": "cpu",
        "interaction_params": {
            "save_frequency": -1,
            "save_probabilities": true,
            "save_probabilities_bins_number": 10,
            "write_training_prediction": true,
            "write_validation_prediction": true,
            "echo_training_metrics": true
        },
        "params": {
            "global_epoch": 30,
            "local_epoch": 1,
            "batch_size": 128,
            "aggregation_config": {
                "type": "fedavg",
                "encryption": {
                    "method": "otp",
                    "key_bitlength": 64,
                    "data_type": "numpy.ndarray",
                    "key_exchange": {
                        "key_bitlength": 3072,
                        "optimized": true
                    },
                    "csprng": {
                        "name": "hmac_drbg",
                        "method": "sha512"
                    }
                }
            },
            "optimizer_config": {
                "adam": {}
            },
            "lossfunc_config": {
                "softmax_cross_entropy_with_integer_labels": {}
            },
            "lr_scheduler_config": {
                "cosine_decay_schedule": {
                    "init_value": 0.001,
                    "decay_steps": 200
                }
            },
            "metric_config": {
                "accuracy": {},
                "f1_score": {"average":"micro"},
                "precision": {"average":"micro"},
                "recall": {"average":"micro"}
            },
            "early_stopping": {
                "key": "acc",
                "patience": -1,
                "delta": 0
            },
            "extra_config": {
            }
        }
    }
}